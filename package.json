{
  "name": "sistema-ebd",
  "version": "1.0.0",
  "description": "Sistema completo de gestão EBD - Igreja Cristã Maranata",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "react-scripts start",
    "preview": "serve -s build",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "validate": "npm run lint && npm run build",
    "pdf:extract": "node scripts/extractPDF.js",
    "python:integrate": "python scripts/pdf_processor.py",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^3.5.0",
    
    "lucide-react": "^0.263.1",
    "tailwindcss": "^3.3.6",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    
    "@supabase/supabase-js": "^2.39.0",
    
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-dropzone": "^14.2.3",
    
    "date-fns": "^2.30.0",
    "clsx": "^2.0.0",
    "class-variance-authority": "^0.7.0",
    
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "react-pdf": "^7.5.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "papaparse": "^5.4.1",
    "file-saver": "^2.0.5",
    
    "jspdf": "^2.5.1",
    "html2canvas": "^1.4.1",
    "react-to-print": "^2.14.15",
    
    "recharts": "^2.8.0",
    "framer-motion": "^10.16.4",
    
    "@tanstack/react-query": "^5.8.0",
    "axios": "^1.6.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.3.14",
    "@types/lodash": "^4.14.202",
    "@types/file-saver": "^2.0.7",
    
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    
    "serve": "^14.2.0",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ebd",
    "igreja",
    "sistema",
    "pdf",
    "automacao",
    "rpa",
    "nova-brasilia",
    "supabase",
    "react"
  ],
  "author": "Bruno Pereira de Souza",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brunopdesouza/SistemaEBD.v1.git"
  },
  "homepage": "https://sistemaebd.netlify.app",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
